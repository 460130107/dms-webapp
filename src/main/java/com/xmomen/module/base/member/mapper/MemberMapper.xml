<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xmomen.module.base.member.mapper.MemberMapper" >

    <!--    查询消息    -->
    <select id="getMemberList" resultType="com.xmomen.module.base.member.model.MemberModel" parameterType="java.util.HashMap">
        SELECT
        *
        FROM
        cd_member cm
        <where>
              <if test="keyword">
                  AND cm.member_code LIKE CONCAT('%', #{keyword}, '%') or cm.name LIKE CONCAT('%', #{keyword}, '%') or cm.phone_number like CONCAT('%', #{keyword}, '%')
              </if>
              <if test="id">
                  AND cm.cd_member_id = #{id}
              </if>
          </where>
    </select>
</mapper>